{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.6.1",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "icon-48.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "unlimitedStorage", "tabs"],
  "host_permissions": ["*://*/*"],

  "web_accessible_resources": [{ 
    "resources": ["js/inpage.js","placeholder-nft-img.png","placeholder-nft-video.png"],
    "matches": [
        "*://*/*"
      ]
  }]
}
